    let slideIndex = 0;

    function showSlides() {
        const slides = document.getElementById('slideshow'); //slideshow on header
        const images = [
            '/images/Caya-Banner_2197-Ã—-1200-px-002-min.jpg',
            '/images/howard-bouchevereau-BRDO4C-0h_s-unsplash.jpg', 
        ];

        slideIndex++;

        if (slideIndex >= images.length) {
            slideIndex = 0;
        }

        slides.style.backgroundImage = `url('${images[slideIndex]}')`;
        setTimeout(showSlides, 5000); // Change image every 5 seconds
    }

    showSlides(); // Start the slideshow
</script>
  
  

