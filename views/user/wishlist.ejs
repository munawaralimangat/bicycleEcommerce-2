<script>

  async function removeFromWishlist(productId,userId){
    try{
    const res = await fetch(`/brepublic/removefromwishlist?userId=${userId}&productId=${productId}`,{
      method:'delete',
      headers:{
        'Content-Type':'application/json'
      },
      body:JSON.stringify({
        productId:productId,
        userId:userId
      })
    })
    const data = await res.json()
    if (res.ok) {
            Swal.fire({
              icon: 'success',
              title: 'Product Removed!',
              text: data.message,
            }).then(() => {
              window.location.reload();
            });
          } else {
            Swal.fire({
              icon: 'error',
              title: 'Error',
              text: data.error || 'Something went wrong!',
            });
          }
      
          console.log(data.message);
    console.log(data.message)
  }catch(error){
    console.error('Error removing product:', error);
  }
  }
</script>

